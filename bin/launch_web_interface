#!/usr/bin/env python3
"""
Launch the Gold Standard Web Interface for Financial Reconciliation

This script starts the modern web-based transaction review interface.
Features glassmorphism design, responsive layout, and real-time progress tracking.

Usage:
    python bin/launch_web_interface
    
The interface will open automatically in your default browser at:
http://localhost:5000
"""

import sys
import os
from pathlib import Path

# Add the src directory to Python path
sys.path.insert(0, str(Path(__file__).parent.parent / "src"))

# Import and run the web interface
from review.web_interface import main

if __name__ == "__main__":
    main()