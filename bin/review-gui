#!/usr/bin/env python3
"""
Visual Transaction Review GUI Launcher
=====================================

Launch the visual GUI for reviewing financial transactions.

Usage:
    python bin/review-gui
    python bin/review-gui /path/to/database.db

Features:
- Professional GUI with keyboard shortcuts
- Visual transaction details and review controls
- Progress tracking and session statistics
- Export functionality and help system

Author: Claude (Anthropic)
Date: July 31, 2025
"""

import sys
import os
from pathlib import Path

# Add project root to path
project_root = Path(__file__).parent.parent
sys.path.insert(0, str(project_root))

def main():
    """Launch the visual transaction review GUI."""
    try:
        from src.review.modern_visual_review_gui import TransactionReviewGUI
        
        # Determine database path
        if len(sys.argv) > 1:
            db_path = sys.argv[1]
        else:
            db_path = "data/phase5_manual_reviews.db"
            
        # Check if database exists
        if not os.path.exists(db_path):
            print(f"Database not found: {db_path}")
            print("Please ensure the manual review database exists.")
            print("Run a reconciliation first to generate transactions for review.")
            sys.exit(1)
            
        print("Starting Visual Transaction Review GUI...")
        print(f"Database: {db_path}")
        print("Press F1 for keyboard shortcuts and help")
        print()
        
        # Launch the GUI
        app = TransactionReviewGUI(db_path)
        app.run()
        
    except ImportError as e:
        print(f"Import error: {e}")
        print("Please ensure all dependencies are installed:")
        print("pip install -r requirements.txt")
        sys.exit(1)
        
    except KeyboardInterrupt:
        print("\nGUI closed by user")
        
    except Exception as e:
        print(f"Error launching GUI: {e}")
        sys.exit(1)


if __name__ == "__main__":
    main()